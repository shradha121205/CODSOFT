2.Simple calculator:
using namespace std;
int main(){
int a,b;
char ch;
cout<<"Enter the two numbers:";
cin>>a>>b;
cout<<"Enter the desired operation:";
cin>>ch;
if(ch=='+'){
    cout<<"The sum of "<<a<<" and "<<b<<" is "<<a+b;
}
else if(ch=='-'){
    cout<<"The difference of "<<a<<" and "<<b<<" is "<<a-b;
}
else if(ch=='*'){
    cout<<"The product of "<<a<<" and "<<b<<" is "<<a*b;
}
else{
    cout<<"The division of "<<a<<" and "<<b<<" is "<<a/b;
}
return 0;
}
